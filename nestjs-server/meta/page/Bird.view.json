{
  "name": "Bird.view",
  "title": "",
  "type": "view_edit",
  "layoutStyle": "Venice",
  "templates": [
    {
      "cells": [
        [
          {
            "width": "4",
            "height": "1",
            "template": {
              "binding": "bird",
              "templateHeading": "${bird.name}",
              "type": "form",
              "metaEntityName": "Bird",
              "orderByName": "",
              "orderByDir": "",
              "cells": [
                [
                  {
                    "width": "12",
                    "height": "1",
                    "tool": {
                      "type": "Image",
                      "styles": "rounded-circle bird-profile-image-width",
                      "imageUrl": "/assets/Kiwi.png",
                      "containerStyles": "w-100 text-center"
                    }
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "band"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "status"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "species",
                    "component": "SelectTwo",
                    "componentData": {
                      "secondaryAttributeName": "form"
                    }
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "age_class"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "first_found_date"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "lay_date"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "hatch_date"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "demise_date"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "component": "TextInput",
                    "attributeName": "sex"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "component": "TextArea",
                    "attributeName": "mother"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "father"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "comments",
                    "component": "TextArea"
                  }
                ]
              ],
              "locations": {
                "BottomMiddle": {
                  "type": "Button",
                  "containerStyles": "flex-grow-1",
                  "styles": "btn btn-outline-primary w-100",
                  "label": "Edit Bird",
                  "route": "/data/Bird/edit/${bird.id}"
                }
              },
              "styles": "bird-view"
            }
          },
          {
            "width": "8",
            "height": "1",
            "template": {
              "binding": "events",
              "templateHeading": "Events",
              "type": "table",
              "metaEntityName": "Event",
              "orderByName": "date_time",
              "orderByDir": "DESC",
              "cells": [
                [
                  {
                    "width": "6",
                    "height": "1",
                    "attributeName": "date_time"
                  },
                  {
                    "width": "1",
                    "height": "1",
                    "attributeName": "event_type"
                  }
                ]
              ],
              "route": "/data/Event/view/${id}",
              "navigation": "Enabled"
            }
          }
        ]
      ],
      "metaEntityName": "Bird",
      "type": "form",
      "locations": {
        "OuterTopRight": {
          "type": "Button",
          "styles": "btn btn-primary",
          "label": "Record Event",
          "route": "data/Event/edit/**NEW**?bird_id=${bird.id}",
          "action": "recordEvent"
        },
        "TopRight": {
          "type": "Image",
          "styles": "",
          "imageUrl": "/assets/images/image.png"
        }
      }
    }
  ],
  "dataQueryList": [
    {
      "dataName": "bird",
      "resultCardinality": "QueryOne",
      "queryType": "Entity",
      "queryName": "Bird",
      "fieldName": "id",
      "parameter": "id"
    },
    {
      "dataName": "events",
      "resultCardinality": "QueryMany",
      "queryType": "Entity",
      "queryName": "Event",
      "fieldName": "bird_id",
      "parameter": "id",
      "orderByName": "date_time",
      "orderByDir": "DESC"
    }
  ]
}