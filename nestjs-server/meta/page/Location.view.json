{
  "name": "Location.view",
  "title": "Location View",
  "type": "view_edit",
  "layoutStyle": "Paris",
  "dataQueryList": [
    {
      "dataName": "location",
      "resultCardinality": "QueryOne",
      "queryType": "Entity",
      "queryName": "Location",
      "fieldName": "id",
      "parameter": "id"
    },
    {
      "dataName": "event",
      "resultCardinality": "QueryMany",
      "queryType": "Entity",
      "queryName": "Event",
      "fieldName": "location_id",
      "parameter": "id",
      "orderByName": "date_time",
      "orderByDir": "DESC"
    }
  ],
  "controllers": [],
  "templates": [
    {
      "cells": [
        [
          {
            "width": "12",
            "height": "1",
            "tool": {
              "type": "Map",
              "containerStyles": "",
              "styles": "",
              "label": "",
              "easting": "easting",
              "northing": "northing"
            }
          }
        ]
      ],
      "metaEntityName": "Location",
      "type": "form",
      "binding": "location"
    },
    {
      "cells": [
        [
          {
            "width": "6",
            "height": "1",
            "attributeName": "location_name"
          },
          {
            "width": "6",
            "height": "1",
            "attributeName": "location_type",
            "component": "Select"
          }
        ],
        [
          {
            "width": "12",
            "height": "3",
            "attributeName": "description",
            "component": "TextArea",
            "footerHtml": "<span class=\"text-muted mt-1\">e.g. 30 m south of the big rimu in the southern block.</span>"
          }
        ]
      ],
      "metaEntityName": "Location",
      "type": "form",
      "binding": "location",
      "templateHeading": "Location details"
    },
    {
      "cells": [
        [
          {
            "width": "3",
            "height": "1",
            "attributeName": "easting"
          },
          {
            "width": "3",
            "height": "1",
            "attributeName": "northing"
          },
          {
            "width": "3",
            "height": "1",
            "attributeName": "altitude"
          }
        ]
      ],
      "metaEntityName": "Location",
      "type": "form",
      "templateHeading": "Coordinates",
      "binding": "location"
    },
    {
      "cells": [
        [
          {
            "width": "12",
            "height": "2",
            "attributeName": "media_files",
            "component": "Media",
            "hideLabel": true
          }
        ]
      ],
      "metaEntityName": "Location",
      "type": "form",
      "templateHeading": "Media",
      "binding": "location"
    },
    {
      "cells": [
        [
          {
            "width": "3",
            "height": "1",
            "attributeName": "date_time",
            "component": "DatePicker"
          },
          {
            "width": "3",
            "height": "1",
            "attributeName": "bird"
          },
          {
            "width": "3",
            "height": "1",
            "attributeName": "event_type"
          },
          {
            "width": "3",
            "height": "1"
          }
        ],
        [
          {
            "width": "6",
            "height": "1"
          },
          {
            "width": "6",
            "height": "1"
          }
        ]
      ],
      "metaEntityName": "Event",
      "type": "table",
      "templateHeading": "Events",
      "binding": "event",
      "navigation": "Enabled",
      "route": "/data/Event/view/${id}?backTo=Location"
    }
  ]
}